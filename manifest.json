{
  "manifest_version": 3,
  "name": "My First Extension",
  "version": "1.1",
  "description": "A simple Chromium extension.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["http://*/*", "https://*/*"]
}