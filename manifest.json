{
    "manifest_version": 2,
    "name": "My First Extension",
    "version": "1.0",
    "description": "A simple Chromium extension.",
    "permissions": ["activeTab", "tabs", "http://*/*", "https://*/*"],
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }